@using Company.DAL.Entities

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var departments = ViewBag.dept ; // أو نوع الأقسام الخاص بك
    var dept = departments != null ? new SelectList(departments, "Id", "Department_Name") : new SelectList(Enumerable.Empty<Department>(), "Id", "Department_Name");
}



@model EmployeeViewModel

<div class="bg-warning text-white p-2 shadow-sm">
    <h2 class="text-center m-0">Edit Employee</h2>
</div>

<div class="d-flex justify-content-center align-items-start min-vh-100 pt-5">
    <form class="bg-white p-4 rounded-3 shadow w-50" asp-action="Edit" enctype="multipart/form-data">

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3 col-md-6">
            <label asp-for="UploadImage" class="form-label fw-bold">Upload Image</label>
            <input asp-for="UploadImage"  class="form-control" type="file" />
            <span asp-validation-for="UploadImage" class="text-danger small"></span>
        </div>
        <div class="row">
            <div class="mb-3 col-md-6">
                <label asp-for="FirstName" class="form-label fw-bold">First Name</label>
                <input asp-for="FirstName" class="form-control" type="text" />
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>
            <div class="mb-3 col-md-6">
                <label asp-for="LastName" class="form-label fw-bold">Last Name</label>
                <input asp-for="LastName" class="form-control" type="text" />
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>

            <div class="mb-3 col-md-6">
                <label asp-for="Age" class="form-label fw-bold">Age</label>
                <input asp-for="Age" class="form-control" type="number" />
                <span asp-validation-for="Age" class="text-danger small"></span>
            </div>
            <div class="mb-3 col-md-6">
                <label asp-for="Salary" class="form-label fw-bold">Salary</label>
                <input asp-for="Salary" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Salary" class="text-danger small"></span>
            </div>

            <div class="mb-3 col-md-6">
                <label asp-for="Address" class="form-label fw-bold">Address</label>
                <input asp-for="Address" class="form-control" type="text" />
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>
            <div class="mb-3 col-md-6">
                <label asp-for="Email" class="form-label fw-bold">Email</label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3 col-md-6">
                <label asp-for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" type="tel" />
                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
            </div>
            <div class="mb-3 col-md-6">
                <label asp-for="HireDate" class="form-label fw-bold">Hire Date</label>
                <input asp-for="HireDate" class="form-control" type="date" />
                <span asp-validation-for="HireDate" class="text-danger small"></span>
            </div>

            <div class="mb-3 col-md-6 form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label fw-bold">Is Active</label>
                <span asp-validation-for="IsActive" class="text-danger small"></span>
            </div>

            <div class="mb-3 col-md-6">
                <label asp-for="DepartmentId" class="form-label fw-bold">Choose Department</label>
                <select asp-for="DepartmentId" class="form-select" asp-items="@dept">
                    <option value="">Choose</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger small"></span>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <button type="submit" class="btn bg-warning text-white shadow">
                <i class="fas fa-save me-1"></i>Save
            </button>

            <a asp-action="Index" class="btn btn-light fw-bold">
                <i class="fas fa-arrow-left me-1"></i>Back to list
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

