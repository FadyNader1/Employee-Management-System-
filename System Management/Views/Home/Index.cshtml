@{
    ViewData["Title"] = "Home Page";
}
@model IReadOnlyList<Employee>
<style>
    label.form-label {
        color: black !important;
    }
</style>
<div style="margin-top:5%"></div>

@if (User.Identity.IsAuthenticated)
{
    <div class="text-center mb-5" >
        <h1 class="display-4 " style="color:#2C3E50">Welcome</h1>
        <h1 class="display-4 fw-bold " style="color:red">@User.Identity.Name.ToUpper()</h1>
    </div>
}
else
{
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome</h1>
    </div>
}
<div style="margin-top:15%"></div>
@if (Model.Count > 0)
{
    <div class="login-box d-flex flex-wrap justify-content-center gap-5 px-4" style="background-color:aqua">
        @foreach (var x in Model)
        {
            <div class="p-4 shadow" style="width: 100%; max-width: 500px; background-color: lavender; border: solid 5px darkseagreen; border-radius: 25px;">
                <center>
                    <img src="~/files/images/@x.Image" alt="not found image" width="150" height="150"
                         class="rounded-circle border border-3" style="border-color: darkseagreen; margin-bottom:10px;" />
                         <div class="text-black ">__________________________</div>
                </center>
                <div class="row mt-3">
                    <div class="mb-3 col-md-6">
                        <label class="form-label fw-bold">First Name</label>
                        <input value="@x.FirstName" class="form-control" type="text" readonly />
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label fw-bold">Last Name</label>
                        <input value="@x.LastName" class="form-control" type="text" readonly />
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label fw-bold">Age</label>
                        <input value="@x.Age" class="form-control" type="number" readonly />
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label fw-bold">Salary</label>
                        <input value="@x.Salary" class="form-control" type="number" step="0.01" readonly />
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label fw-bold">Address</label>
                        <input value="@x.Address" class="form-control" type="text" readonly />
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label fw-bold">Email</label>
                        <input value="@x.Email" class="form-control" type="email" readonly />
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label fw-bold">Phone Number</label>
                        <input value="@x.PhoneNumber" class="form-control" type="tel" readonly />
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label fw-bold">Department</label>
                        <input value="@x.department?.Department_Name" class="form-control" type="tel" readonly />
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label fw-bold">Hire Date</label>
                        <input value="@x.HireDate.ToShortDateString()" class="form-control" type="text" readonly />
                    </div>
                </div>
            </div>
        }
    </div>
}
