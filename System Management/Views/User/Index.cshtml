
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<UserViewModel>


<div class="container w-75 mt-2">
    <form asp-action="Index" method="get" class="d-flex shadow-sm">
        <input class="form-control  " type="email" name="value" placeholder="Search by email..." aria-label="Search">
        <button class="btn btn-primary text-white" type="submit">
            <i class="fas fa-search"></i> Search
        </button>
    </form>
</div>
<br />
@if (Model.Any())
{
    <div class=" text-white text-center py-2 mt-4 shadow-sm rounded" style="background-color:#2C3E50">
        <center>
            <h2 class="text-white">All Users</h2>
        </center>
    </div>
    <table class="table table-striped table-hover text-center bg-white mt-3 shadow-sm rounded border border-5">
        <thead class=" p-5" style="background-color: rgba(100, 100, 0, 0.25)">
            <tr>
                <th>ID</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Username</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>Roles</th>
                <th class="bg-info">
                    <i class="fas fa-eye  "></i>
                    Details
                </th>
                <th class="bg-warning">
                    <i class="fas fa-edit "></i>
                    Edit
                </th>
                <th class=" bg-danger">
                    <i class="fas fa-trash 	"></i>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(e => x.Id)</td>
                    <td>@Html.DisplayFor(e => x.FirstName)</td>
                    <td>@Html.DisplayFor(e => x.LastName)</td>
                    <td>@Html.DisplayFor(e => x.UserName)</td>
                    <td>@Html.DisplayFor(e => x.Email)</td>
                    <td>@Html.DisplayFor(e => x.PhoneNumber)</td>
                    <td>
                        @foreach (var role in x.Roles)
                        {
                            <span class="badge bg-danger">@role</span>
                        }
                    </td>
                  
                    <td>
                        <a asp-action="Details" asp-route-id="@x.Id" class="btn bg-info shadow border-5 ">
                            <i class="fas fa-eye "></i>
                            Details
                        </a>

                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@x.Id" class="btn bg-warning shadow border-5 ">
                            <i class="fas fa-edit  "></i>
                            Edit
                        </a>

                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@x.Id" class="btn bg-danger shadow border-5 ">
                            <i class="fas fa-trash 	"></i>
                            Delete
                        </a>

                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <br />
    <div class="w-75 p-3 mt-5  @* position-absolute start-50 translate-middle-x *@ " style="background-color:blue;box-shadow: 0 2px 6px rgba(0, 0, 0, 0.9);">
        <center>
            <h2 class="text-white">Not Found Users</h2>
        </center>
    </div>
}


