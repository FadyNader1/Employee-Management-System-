@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model RoleVM

<div class="bg-primary text-white p-2 shadow-sm">
    <h2 class="text-center m-0">Details</h2>
</div>

<div class="d-flex justify-content-center align-items-start min-vh-100 pt-5	">
    <form class="bg-white p-4 rounded-3 shadow w-50">

        <div asp-validation-summary="All"></div>

       

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-bold">Name</label>
            <input asp-for="Name" class="form-control" readonly />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

      

        <div class="d-flex justify-content-between align-items-center">
            <a asp-action="Edit"  class="btn bg-primary text-white shadow" asp-route-id="@Model.Id">
                <i class="fas fa-edit me-1"></i>Edit
            </a>

            <a asp-action="Index" class="btn btn-light fw-bold">
                <i class="fas fa-arrow-left me-1"></i>Back to list
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
