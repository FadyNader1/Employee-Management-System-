
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
@model LoginViewModel

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="login-box w-100" style="max-width: 400px;">
        <h2 class="text-center mb-4">Login</h2>
        <form asp-action="Login">
            <div asp-validation-summary="All"></div>
 
            <div class="mb-3">
                <input  class="form-control" asp-for="Email" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <input  class="form-control" asp-for="Password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <div class="d-flex justify-content-between mb-3">
                <div>
                    <input type="checkbox" id="remember">
                    <label for="remember">Remember me</label>
                </div>
                <a asp-action="ForgetPassword" class="text-white" >Forget password?</a>
            </div>
            <div class="d-grid mb-3">
                <button type="submit" class="btn login-btn fw-bold text-danger ">Login</button>
            </div>
            <div class="text-center">
                Don’t have an account? <a asp-action="Register"  >Register</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

